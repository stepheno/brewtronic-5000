.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", hop_inventories_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_hop_inventory_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      HopInventories
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.hop_inventory.hop_id", :default => t("activerecord.labels.hop_id", :default => "Hop_id"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @hop_inventories.each do |hop_inventory|
          %tr{:class => cycle("odd", "even")}
            %td
              = hop_inventory.id
            %td
              = link_to hop_inventory.hop_id, hop_inventory_path(hop_inventory)
            %td
              = hop_inventory.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", hop_inventory_path(hop_inventory)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_hop_inventory_path(hop_inventory)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", hop_inventory_path(hop_inventory), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = paginate @hop_inventories
- content_for :sidebar, render(:partial => 'sidebar')
