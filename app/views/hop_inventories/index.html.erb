<h1>Hop Inventory</h1>
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-collapse">
        <%= form_tag hop_inventories_path, :method => 'get', :id => "hop_inventories_search", :class => "navbar-search pull-left" do %>
