        <% end %>
        <%= link_to raw('<i class="icon-plus-sign icon-white"></i> New Hop Inventory'), new_hop_inventory_path, :class => 'btn btn-primary pull-right'%>
      </div>
    </div>
  </div>
  <div id="hop_inventories"><%= render 'hop_inventories' %></div>
</div>

