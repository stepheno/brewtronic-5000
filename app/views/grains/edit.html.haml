.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", grains_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_grain_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_grain_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Grain
    .inner
      = form_for @grain, :url => grain_path(@grain), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
