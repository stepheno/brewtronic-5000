.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", grains_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_grain_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", grain_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.grain.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @grain.name
      %p
        %b
          = t("activerecord.attributes.grain.extract_potential", :default => t("activerecord.labels.extract_potential", :default => "Extract potential"))
          \:
        = @grain.extract_potential
      %p
        %b
          = t("activerecord.attributes.grain.color", :default => t("activerecord.labels.color", :default => "Color"))
          \:
        = @grain.color
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_grain_path(@grain), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), grain_path(@grain), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
