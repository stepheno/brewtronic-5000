<h1>Grains</h1>
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-collapse">
        <%= form_tag grains_path, :method => 'get', :id => "grains_search", :class => "navbar-search pull-left" do %>
          <%= text_field_tag :search, params[:search], :class => "search-query", :placeholder => "Search" %>
        <% end %>
        <%= link_to raw('<i class="icon-plus-sign icon-white"></i> New Grain'), new_grain_path, :class => 'btn btn-primary pull-right'%>
      </div>
    </div>
  </div>
  <div id="grains"><%= render 'grains' %></div>
</div>

