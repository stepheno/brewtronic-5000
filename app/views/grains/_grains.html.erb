<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "grain_supplier_id", "Grain Supplier" %></th>
      <th><%= sortable "extract_potential" %></th>
      <th><%= sortable "color" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @grains.each do |grain| %>
    <tr>
      <td><%= link_to grain.name, grain %></td>
      <td><%= grain.grain_supplier.name unless grain.grain_supplier.nil?%></td>
      <td><%= grain.extract_potential %></td>
      <td><%= grain.color %></td>
      <td>
        <div class="pull-right">
          <%= link_to 'Edit', edit_grain_path(grain), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', grain, method: :delete, data: { confirm: 'Are you sure?', type: 'json'}, remote: 'true', :rel => 'nofollow', :class => 'btn btn-mini btn-danger delete_row' %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @grains %>
