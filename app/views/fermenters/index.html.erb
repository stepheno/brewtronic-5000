<h1>Listing Fermenters</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Size</th>
      <th>Name</th>
      <th>Fermenter type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @fermenters.each do |fermenter| %>
      <tr>
        <td><%= fermenter.name %></td>
        <td><%= fermenter.size %></td>
        <td><%= fermenter.fermenter_type %></td>
        <td><%= link_to 'Edit', edit_fermenter_path(fermenter), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', fermenter, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Fermenter', new_fermenter_path %>
<%= will_paginate @fermenters %>
