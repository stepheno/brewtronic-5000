<h1>Fermenters</h1>
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-collapse">
        <%= form_tag fermenters_path, :method => 'get', :id => "fermenters_search", :class => "navbar-search pull-left" do %>
          <%= text_field_tag :search, params[:search], :class => "search-query", :placeholder => "Search" %>
        <% end %>
        <%= link_to raw('<i class="icon-plus-sign icon-white"></i> New Fermenter'), new_fermenter_path, :class => 'btn btn-primary pull-right'%>
      </div>
    </div>
  </div>
  <div id="fermenters"><%= render 'fermenters' %></div>
</div>
