<h1>Listing Recipes</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Style</th>
    <th>OG</th>
    <th>FG</th>
    <th>Size</th>
    <th>Ibu</th>
    <th>Abv</th>
    <th>Srm</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= recipe.name %></td>
    <td><%= recipe.style %></td>
    <td><%= recipe.target_og %></td>
    <td><%= recipe.target_fg %></td>
    <td><%= recipe.size %></td>
    <td><%= recipe.ibu %></td>
    <td><%= recipe.abv %></td>
    <td><%= recipe.srm %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

