<% content_for :head do %>
  <%= javascript_include_tag 'index_table' %>
<% end %>
<h1>Recipes</h1>
<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <div class="nav-collapse">
        <%= form_tag recipes_path, :method => 'get', :id => "table_search", :class => "navbar-search pull-left", :autocomplete => "off" do %>
          <%= text_field_tag :search, params[:search], :class => "search-query", :placeholder => "Search" %>
        <% end %>
        <%= link_to raw('<i class="icon-plus-sign icon-white"></i> New Recipe'), new_recipe_path, :class => 'btn btn-primary pull-right'%>
      </div>
    </div>
  </div>
  <div id="index_table"><%= render 'recipes' %></div>
</div>
