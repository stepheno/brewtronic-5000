<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th><%= sortable "style_id" %></th>
      <th><%= sortable "target_og", "OG" %></th>
      <th><%= sortable "target_fg", "FG" %></th>
      <th><%= sortable "size" %></th>
      <th><%= sortable "ibu" %></th>
      <th><%= sortable "abv" %></th>
      <th><%= sortable "srm" %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.style.name %></td>
        <td><%= recipe.target_og %></td>
        <td><%= recipe.target_fg %></td>
        <td><%= Units.format_volume_for_user(recipe.size, current_user) %></td>
        <td><%= recipe.ibu %></td>
        <td><%= recipe.abv %></td>
        <td><%= recipe.srm %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td>
          <div class="pull-right">
            <%= link_to 'Edit', edit_recipe_path(recipe), :class => 'btn btn-mini' %>
            <%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @recipes %>
