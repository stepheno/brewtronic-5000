<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :style_id %><br />
    <%= f.text_field   :style %>
    <%= f.hidden_field :style_id %>
  </div>
  <div class="field">
    <%= f.label :target_og %><br />
    <%= f.text_field :target_og %>
  </div>
  <div class="field">
    <%= f.label :target_fg %><br />
    <%= f.text_field :target_fg %>
  </div>
  <div class="field">
    <%= f.label :size %><br />
    <%= f.text_field :size %>
    <%= f.select :unit, options_for_select(["l", "gal", "bbl"], :selected => current_user.volume_units) %>
  </div>
  <div class="field">
    <%= f.label :yeast_id %><br />
    <%= f.select :yeast_id, Yeast.all.collect {|c| [c.name, c.id]} %>
  </div>
  <%= f.label :hop_id, "Hops" %><br />
  <div class="field">
    <%= f.fields_for :recipe_hops do |hop| %>
      <%= render 'recipe_hop_fields', f: hop%>
    <% end %>
  </div>
  <%= link_to_add_fields "Add Hop", f, :recipe_hops %>

  <%= f.label :grain_id, "Grains" %><br />
  <div class="field">
    <%= f.fields_for :recipe_grains do |grain| %>
      <%= render 'recipe_grain_fields', f: grain%>
    <% end %>
  </div>
  <%= link_to_add_fields "Add Grain", f, :recipe_grains %>

  <%= f.label :mash_type_id, "Mash Steps" %><br />
  <div class="field">
    <%= f.fields_for :recipe_mashes do |hop| %>
      <%= render 'recipe_mash_fields', f: hop%>
    <% end %>
  </div>
  <%= link_to_add_fields "Add Mash Steps", f, :recipe_mashes %>

  <%= f.label :mineral_id, "Minerals" %><br />
  <div class="field">
    <%= f.fields_for :recipe_minerals do |hop| %>
      <%= render 'recipe_mineral_fields', f: hop%>
    <% end %>
  </div>
  <%= link_to_add_fields "Add Minerals", f, :recipe_minerals %>

  <div class="field">
    <%= f.label :boil_time %><br />
    <%= f.text_field :boil_time %>
  </div>
  <div class="field">
    <%= f.label :ibu %><br />
    <%= f.text_field :ibu %>
  </div>
  <div class="field">
    <%= f.label :abv %><br />
    <%= f.text_field :abv %>
  </div>
  <div class="field">
    <%= f.label :srm %><br />
    <%= f.text_field :srm %>
  </div>
  <div class="field">
    <%= f.label :pitch_temperature %><br />
    <%= f.text_field :pitch_temperature %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
