<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @recipe.name %>
</p>

<p>
  <b>Creation Date:</b>
  <%= @recipe.creation_date %>
</p>

<p>
  <b>Style:</b>
  <%= @recipe.style.name unless @recipe.style.nil? %>
</p>

<p>
  <b>Target og:</b>
  <%= Units.format_density_for_user(@recipe.target_og, current_user) %>
</p>

<p>
  <b>Calculated og:</b>
  <%= Units.format_density_for_user(@recipe.calculated_og, current_user) %>
</p>

<p>
  <b>Target fg:</b>
  <%= Units.format_density_for_user(@recipe.target_fg, current_user) %>
</p>

<p>
  <b>Size:</b>
  <%= Units.format_volume_for_user(@recipe.size, current_user) %>
</p>

<p>
  <b>Yeast:</b>
  <%= @recipe.yeast.name unless @recipe.yeast.nil? %>
</p>

<p>
  <b>Boil time:</b>
  <%= @recipe.boil_time %>
</p>

<p>
  <b>Ibu:</b>
  <%= @recipe.ibu %>
</p>

<p>
  <b>Calculated Ibu:</b>
  <%= "%0.2f" % @recipe.calculated_ibu %>
</p>

<p>
  <b>Abv:</b>
  <%= @recipe.abv %>
</p>

<p>
  <b>Calculated Abv:</b>
  <%= "%0.2f" % @recipe.calculated_abv %>
</p>

<p>
  <b>Srm:</b>
  <%= @recipe.srm %>
</p>

<p>
  <b>Pitch temperature:</b>
  <%= Units.format_temp_for_user(@recipe.pitch_temperature, current_user) %>
</p>

<p>
  <b>Grains:</b>
  <table class="table">
    <thead>
      <tr>
        <th>Grain</th>
        <th>Amount</th>
        <th>Calculated OG</th>
      </tr>
    </thead>
    <tbody>
    <% @recipe.recipe_grains.each do |recipe_grain| %>
      <tr>
        <td><%= recipe_grain.grain.name %></td>
        <td><%= Units.format_mass_for_user(recipe_grain.amount, current_user) %></td>
        <td> <%= "%0.2f" % recipe_grain.calculated_og %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</p>

<p>
  <b>Hops:</b>
  <table class="table">
    <thead>
      <tr>
        <th>Hop</th>
        <th>Amount</th>
        <th>Time</th>
        <th>Calculated IBU</th>
      </tr>
    </thead>
    <tbody>
    <% @recipe.recipe_hops.each do |recipe_hop| %>
      <tr>
        <td><%= recipe_hop.hop.name %></td>
        <td><%= Units.format_mass_for_user(recipe_hop.amount, current_user) %></td>
        <td><%= recipe_hop.time %></td>
        <td> <%= "%0.2f" % recipe_hop.calculated_ibu %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</p>

<p>
  <b>Mash Steps:</b>
  <table class="table">
    <thead>
      <tr>
        <th>Mash Type</th>
        <th>Temperature</th>
        <th>Time</th>
      </tr>
    </thead>
    <tbody>
    <% @recipe.recipe_mashes.each do |recipe_mash| %>
      <tr>
        <td><%= recipe_mash.mash_type.name %></td>
        <td><%= Units.format_temp_for_user(recipe_mash.temperature, current_user) %></td>
        <td><%= recipe_mash.time %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</p>

<p>
  <b>Minerals:</b>
  <table class="table">
    <thead>
      <tr>
        <th>Mineral</th>
        <th>Amount</th>
      </tr>
    </thead>
    <tbody>
    <% @recipe.recipe_minerals.each do |recipe_mineral| %>
      <tr>
        <td><%= recipe_mineral.mineral.name %></td>
        <td><%= Units.format_mass_for_user(recipe_mineral.amount, current_user) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</p>
<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
<%= link_to 'Back', recipes_path %>
