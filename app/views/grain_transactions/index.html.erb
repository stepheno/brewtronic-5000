<h1>Listing grain_transactions</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Grain</th>
      <th>Grain supplier</th>
      <th>Quantity</th>
      <th>Unit amount</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @grain_transactions.each do |grain_transaction| %>
      <tr>
        <td><%= grain_transaction.grain.name %></td>
        <td><%= grain_transaction.grain_supplier.name %></td>
        <td><%= grain_transaction.quantity %></td>
        <td><%= grain_transaction.unit_amount %></td>
        <td><%= link_to 'Edit', edit_grain_transaction_path(grain_transaction), :class=> 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', grain_transaction, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New Grain transaction', new_grain_transaction_path %>
