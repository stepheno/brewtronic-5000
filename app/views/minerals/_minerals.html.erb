<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Calcium</th>
      <th>Magnesium</th>
      <th>Sodium</th>
      <th>Sulfate</th>
      <th>Carbonate</th>
      <th>Chloride</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @minerals.each do |mineral| %>
    <tr>
      <td><%= link_to mineral.name, mineral %></td>
      <td><%= mineral.calcium %></td>
      <td><%= mineral.magnesium %></td>
      <td><%= mineral.sodium %></td>
      <td><%= mineral.sulfate %></td>
      <td><%= mineral.carbonate %></td>
      <td><%= mineral.chloride %></td>
      <td><%= link_to 'Edit', edit_mineral_path(mineral), :class => 'btn btn-mini'  %></td>
      <td><%= link_to 'Destroy', mineral, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger'  %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @minerals %>
