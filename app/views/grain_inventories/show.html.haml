.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", grain_inventories_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_grain_inventory_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", grain_inventory_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.grain_inventory.amount", :default => t("activerecord.labels.amount", :default => "Amount"))
          \:
        = @grain_inventory.amount
      %p
        %b
          = t("activerecord.attributes.grain_inventory.grain_id", :default => t("activerecord.labels.grain_id", :default => "Grain"))
          \:
        = @grain_inventory.grain_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_grain_inventory_path(@grain_inventory), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), grain_inventory_path(@grain_inventory), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
