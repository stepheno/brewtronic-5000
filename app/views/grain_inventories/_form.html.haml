.group
  = f.label :amount, t("activerecord.attributes.grain_inventory.amount", :default => "Amount"), :class => :label
  = f.text_field :amount, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :grain_id, t("activerecord.attributes.grain_inventory.grain_id", :default => "Grain"), :class => :label
  = f.select :grain_id, Grain.all.collect {|c| [c.name, c.id]}
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), grain_inventories_path, :class => "text_button_padding link_button"
