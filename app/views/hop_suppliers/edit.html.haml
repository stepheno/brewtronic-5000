.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", hop_suppliers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_hop_supplier_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_hop_supplier_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      HopSupplier
    .inner
      = form_for @hop_supplier, :url => hop_supplier_path(@hop_supplier), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
