.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", hop_suppliers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_hop_supplier_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      HopSuppliers
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.hop_supplier.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @hop_suppliers.each do |hop_supplier|
          %tr{:class => cycle("odd", "even")}
            %td
              = hop_supplier.id
            %td
              = link_to hop_supplier.name, hop_supplier_path(hop_supplier)
            %td
              = hop_supplier.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", hop_supplier_path(hop_supplier)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_hop_supplier_path(hop_supplier)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", hop_supplier_path(hop_supplier), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = paginate @hop_suppliers
- content_for :sidebar, render(:partial => 'sidebar')
