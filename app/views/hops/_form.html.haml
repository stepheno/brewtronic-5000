.group
  = f.label :name, t("activerecord.attributes.hop.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :alpha, t("activerecord.attributes.hop.alpha", :default => "Alpha"), :class => :label
  = f.text_field :alpha, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :hop_supplier_id, t("activerecord.attributes.hop.hop_supplier_id", :default => "Hop supplier"), :class => :label
  = f.select :hop_supplier_id, HopSupplier.all.collect {|c| [c.name, c.id]}
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), hops_path, :class => "text_button_padding link_button"
