.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", hops_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_hop_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_hop_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Hop
    .inner
      = form_for @hop, :url => hop_path(@hop), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
