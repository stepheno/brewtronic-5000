.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active= link_to "#{t("web-app-theme.list", :default => "List")}", brewers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_brewer_path
  .content
    %h2.title
      = t("web-app-theme.all", :default => "All")
      Brewers
    .inner
      %table.table
        %tr
          %th.first ID
          %th
            = t("activerecord.attributes.brewer.name", :default => t("activerecord.labels.name", :default => "Name"))
          %th= t("web-app-theme.created_at", :default => "Created at")
          %th.last &nbsp;
        - @brewers.each do |brewer|
          %tr{:class => cycle("odd", "even")}
            %td
              = brewer.id
            %td
              = link_to brewer.name, brewer_path(brewer)
            %td
              = brewer.created_at
            %td.last
              = link_to "#{t("web-app-theme.show", :default => "Show")}", brewer_path(brewer)
              |
              \#{link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_brewer_path(brewer)} |
              \#{link_to "#{t("web-app-theme.delete", :default => "Delete")}", brewer_path(brewer), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"}
      .actions-bar.wat-cf
        .actions
        = paginate @brewers
- content_for :sidebar, render(:partial => 'sidebar')
