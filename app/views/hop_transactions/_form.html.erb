  </div>
  <div class="field">
    <%= f.label :hop_year %><br />
    <%= f.number_field :hop_year %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br />
    <%= f.number_field :quantity %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
    <%= f.select :unit, options_for_select(["kg", "lb", "oz", "g"])%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
