.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", grain_suppliers_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_grain_supplier_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", grain_supplier_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.grain_supplier.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @grain_supplier.name
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_grain_supplier_path(@grain_supplier), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), grain_supplier_path(@grain_supplier), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
