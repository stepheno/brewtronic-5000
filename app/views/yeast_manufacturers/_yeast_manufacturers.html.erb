<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= sortable "name" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @yeast_manufacturers.each do |yeast_manufacturer| %>
    <tr>
      <td><%= link_to yeast_manufacturer.name, yeast_manufacturer%></td>
      <td>
        <div class="pull-right">
          <%= link_to 'Edit', edit_yeast_manufacturer_path(yeast_manufacturer), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', yeast_manufacturer, method: :delete, data: { confirm: 'Are you sure?', type: 'json'}, remote: 'true', :rel => 'nofollow', :class => 'btn btn-mini btn-danger delete_row' %>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @yeast_manufacturers %>
